@startuml
!include style.puml
skinparam ClassFontColor #000000
skinparam ClassBorderColor #000000

title Initial state

package CommandMessages <<rectangle>> {
    class Message1 as "__c0:InitialCommand__"
    class Message2 as "__c1:DeleteCase__"
    class Message3 as "__c2:AddCase__"
}

package States {
    class State1 as "__p0:Pivot__"
    class State2 as "__p1:Pivot__"
    class State3 as "__p2:Pivot__"
}

State1 -[hidden]right-> State2
State2 -[hidden]right-> State3

hide State2
hide State3

Message1 -[hidden]right-> Message2
Message2 -[hidden]right-> Message3
Message2 -[hidden]down-> State2

hide Message2
hide Message3

class Pointer as "Current State" #FFFFF

Pointer -up-> State1
@end
